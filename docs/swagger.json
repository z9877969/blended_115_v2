{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Blended 115",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "Our amazing API for blended 115\n"
  },
  "servers": [
    {
      "url": "http://localhost:4040"
    },
    {
      "url": null
    }
  ],
  "tags": [
    {
      "name": "Products",
      "description": "Some products API"
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Get products list",
        "operationId": "getAllProducts",
        "description": "Returns a list of all products",
        "parameters": [
          {
            "name": "category",
            "in": "query",
            "description": "Product`s category name",
            "schema": {
              "type": "string",
              "enum": [
                "books",
                "electronics",
                "clothing",
                "other"
              ]
            }
          },
          {
            "name": "minPrice",
            "in": "query",
            "description": "Min product price",
            "schema": {
              "type": "number",
              "minimum": 0,
              "example": 0
            }
          },
          {
            "name": "maxPrice",
            "in": "query",
            "description": "Max product price",
            "schema": {
              "type": "number",
              "minimum": 0,
              "example": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "Products response",
                  "properties": {
                    "status": {
                      "type": "number",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found products!"
                    },
                    "data": {
                      "type": "array",
                      "description": "Products list",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "$ref": "#/components/examples/product_name"
                          },
                          "price": {
                            "$ref": "#/components/examples/product_price"
                          },
                          "category": {
                            "$ref": "#/components/examples/product_category"
                          },
                          "description": {
                            "$ref": "#/components/examples/product_description"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {}
          },
          "401": {
            "description": "Unauthorized",
            "content": {}
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {},
    "examples": {
      "product_name": {
        "type": "string",
        "minLength": 1,
        "maxLength": 24,
        "example": "Smartphone"
      },
      "product_price": {
        "type": "number",
        "min": 0,
        "max": 2000000,
        "example": 40000
      },
      "product_category": {
        "type": "string",
        "enum": [
          "books",
          "electronics",
          "clothing",
          "other"
        ],
        "example": "clothing"
      },
      "product_description": {
        "type": "string",
        "example": "Some product description"
      }
    }
  }
}